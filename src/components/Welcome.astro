---
import { Button } from '@/components/ui/button'
// import { Temporal } from 'temporal-polyfill'

// const date = Temporal.Now.zonedDateTimeISO().toPlainDate().toString()

const insights = Object.values(import.meta.glob('../pages/insights/*.md', { eager: true }))
---

<section id="hero" class="space-y-4">
  <div class="space-y-2">
    <h1 class="scroll-m-20 tracking-tight text-[min(12vw,72px)] font-semibold">
      <span class="text-muted-foreground">meet</span>
      <span class="text-primary">ayie</span>
      <span class="block scroll-m-20 tracking-wide text-4xl text-muted-foreground">web developer</span>
    </h1>
  </div>
  <p class="leading-7 [&:not(:first-child)]:mt-6 text-muted-foreground">
    A Philippines based <strong class="font-semibold"> Web Developer</strong>, crafting sleek, engaging interfaces and
    bring vibrant designs to lifeâ€”building web experiences that captivate and inspire.
  </p>
</section>
<section class="mt-6">
  <ul class="my-6 ml-6 list-none [&>li]:mt-2">
    {
      insights.map((insight, _idx) => {
        const item = insight as { url: string; frontmatter: { title: string; date: string } }
        return (
          <Button asChild variant="link">
            <a href={`${item.url}`} class="text-sm flex items-center gap-3">
              <time datetime={`${item.frontmatter.date}`} class="whitespace-nowrap text-muted-foreground">
                {item.frontmatter.date}
              </time>
              <p class="text-lg font-medium text-primary">{item.frontmatter.title}</p>
            </a>
          </Button>
        )
      })
    }
  </ul>
</section>

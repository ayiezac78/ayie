---
import { ArrowRight, ExternalLink } from "@lucide/astro";
import PostLists from "./PostLists.astro";
import {
	Card,
	CardAction,
	CardContent,
	CardDescription,
	CardFooter,
	CardHeader,
	CardTitle,
} from "./ui/card";
---

<section id="hero" class="space-y-4">
  <div class="space-y-2">
    <h1 class="scroll-m-20 tracking-tight text-[min(12vw,72px)] font-khand">
      <span class="text-muted-foreground font-semibold"
        >meet <span class="text-accent-foreground">ayie</span></span
      >

      <span
        class="block scroll-m-20 tracking-wide text-3xl text-muted-foreground font-medium"
        >web developer</span
      >
    </h1>
  </div>
  <p class="leading-7 [&:not(:first-child)]:mt-6 text-muted-foreground">
    A Philippine based <strong class="font-semibold"> Web Developer</strong>,
    crafting sleek, engaging interfaces and bring vibrant designs to
    lifeâ€”building web experiences that captivate and inspire.
  </p>

  <p
    class="text-muted-foreground leading-7 [&:not(:first-child)]:mt-6 text-lg flex gap-2 items-baseline"
  >
    <span> Currently work in </span>
    <a
      href="https://cenixweb.com/"
      class="hover:text-primary transition-colors flex gap-1 items-center"
      target="_blank"
      rel="nofollow noreferrer"
    >
      <strong> Cenix </strong>
      <ExternalLink size={22} />
    </a>
  </p>
</section>
<section class="mt-6">
  <h2
    class="scroll-m-20 pb-2 text-xl font-semibold tracking-tight first:mt-0 text-primary"
  >
    insights
  </h2>
  <PostLists />
  <a
    href="/insights/"
    class="leading-7 [&:not(:first-child)]:mt-6 text-sm text-muted-foreground hover:text-primary transition-colors flex items-center justify-self-end"
  >
    <span class="font-medium">See All</span>
    <!-- <ArrowUpRight size={20} /> -->
  </a>
</section>
<section class="mt-6">
  <h2
    class="scroll-m-20 pb-2 text-xl font-semibold tracking-tight first:mt-0 text-primary"
  >
    showcase
  </h2>
  <Card>
    <CardHeader>
      <CardTitle>Card Title</CardTitle>
      <CardDescription>Card Description</CardDescription>
      <CardAction className="text-sm">Card Action</CardAction>
    </CardHeader>
    <!-- <CardContent>
      <p>Card Content</p>
    </CardContent>
    <CardFooter>
      <p>Card Footer</p>
    </CardFooter> -->
  </Card>
  <a
    href="/showcase/"
    class="leading-7 [&:not(:first-child)]:mt-6 text-sm text-muted-foreground hover:text-primary transition-colors flex items-center justify-self-end"
  >
    <span class="font-medium">See All</span>
    <!-- <ArrowUpRight size={20} /> -->
  </a>
</section>

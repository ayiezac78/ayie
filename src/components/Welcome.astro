---
import { Button } from "@/components/ui/button";

const insights: {
	url: string;
	frontmatter: { title: string; date: string };
}[] = Object.values(
	import.meta.glob("../pages/insights/*.md", { eager: true }),
);
---

<section id="hero" class="space-y-4">
  <div class="space-y-2">
    <h1 class="scroll-m-20 tracking-tight text-[min(12vw,72px)] font-khand">
      <span class="text-muted-foreground font-semibold"
        >meet <span class="text-accent-foreground">ayie</span></span
      >

      <span
        class="block scroll-m-20 tracking-wide text-3xl text-muted-foreground font-medium"
        >web developer</span
      >
    </h1>
  </div>
  <p class="leading-7 [&:not(:first-child)]:mt-6 text-muted-foreground">
    A Philippines based <strong class="font-semibold"> Web Developer</strong>,
    crafting sleek, engaging interfaces and bring vibrant designs to
    lifeâ€”building web experiences that captivate and inspire.
  </p>
</section>
<section class="mt-6">
  <ul class="my-6 ml-6 list-none [&>li]:mt-2">
    {
      insights.map((insight, _idx) => {
        return (
          <li>
            <Button asChild variant="link">
              <a
                href={`${insight.url}`}
                class="text-sm flex items-center gap-3"
              >
                <time
                  datetime={`${insight.frontmatter.date}`}
                  class="whitespace-nowrap text-muted-foreground text-sm"
                  transition:name={`post-date`}
                >
                  {insight.frontmatter.date}
                </time>
                <p
                  class="text-base font-semibold text-primary"
                  transition:name={`post-title`}
                >
                  {insight.frontmatter.title}
                </p>
              </a>
            </Button>
          </li>
        );
      })
    }
  </ul>
</section>
